{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "lib": ["es2015"],
    "target": "es6",
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}